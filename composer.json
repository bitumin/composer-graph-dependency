{
    "name"       : "bitumin/composer-graph-dependency",
    "description": "Filters and displays graphs dependencies of packages installed",
    "keywords"   : [
        "composer",
        "graph",
        "dependency",
        "dependencies"
    ],
    "require"    : {
        "php"                       : "^7.0",
        "clue/graph-composer"       : "^1.0.0",
        "graphp/graphviz"           : "^0.2.0",
        "jms/composer-deps-analyzer": "^0.1",
        "symfony/console"           : "^2.7",
        "ext-json"                  : "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "autoload"   : {
        "psr-4": {
            "Kassko\\Composer\\GraphDependency\\": "src"
        }
    },
    "bin"        : [
        "script/composer-dependency"
    ]
}
